{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de bord{% endblock %}
{# Affichage sur le tableau de bord Admin des stat des animaux #}
{# A chaque clic par un visiteur sur un animal, comptabilisation dans l'entit√© Animal. #}
{% block main %} 
{# main #}
<h2>Statistiques de la consultation des animaux</h2>
<table>
    <thead>
        <tr>
            <th>Nom de l'animal</th>
            <th>Consultations</th>
        </tr>
    </thead>
    <tbody>
        {% for animal in animalStats %}
            <tr>
                <td>{{ animal.prenom }}</td>
                <td>{{ animal.consultation }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
