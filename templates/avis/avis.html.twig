
{% extends 'base.html.twig' %}

{% block title %}Votre avis{% endblock %}


{% block stylesheets %}
    <style>
       
        body {
            background-color: skyblue;
        }
    </style>
{% endblock %}
{# 
permet de saisir un avis. Il n'apparait pas tant qu'il n'est pas rendu visible par employé #}
{% block body %}
    <h1>Laisser un avis</h1>

    {{ form_start(form) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.commentaire) }}
        {{ form_row(form.submit) }}
    {{ form_end(form) }}

    {# Seulement les 20 derniers avis validés par employé #}
    <h1 class="mt-5">Les 20 derniers avis</h1>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Pseudo</th>
                <th>Commentaire</th>
                
            </tr>
        </thead>
        <tbody>
            {% for avis in avis_list %}
                <tr>
                    <td>{{ avis.creele|date('d/m/Y') }}</td>
                    <td>{{ avis.pseudo }}</td>
                    <td>{{ avis.commentaire }}</td>
                   
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun avis pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
