            </li>
        {% else %}
            <li class="list-group-item">Aucun avis pour le moment.</li>
        {% endfor %}
    </ul> #}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Pseudo</th>
                <th>Commentaire</th>
                
            </tr>
        </thead>
        <tbody>
            {% for avis in avis_list %}
                <tr>
                    <td>{{ avis.creele|date('d/m/Y') }}</td>
                    <td>{{ avis.pseudo }}</td>
                    <td>{{ avis.commentaire }}</td>
                   
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun avis pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
